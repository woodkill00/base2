{
  "name": "base2-react-app",
  "version": "1.0.0",
  "description": "Base2 React Application",
  "private": true,
  "dependencies": {
    "@react-oauth/google": "^0.12.1",
    "axios": "^1.6.0",
    "framer-motion": "^11.18.2",
    "jwt-decode": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@storybook/addon-essentials": "^8.6.15",
    "@storybook/preset-create-react-app": "^8.6.15",
    "@storybook/react": "^8.6.15",
    "@storybook/react-webpack5": "^8.6.15",
    "@storybook/test": "^8.6.15",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest-axe": "^9.0.0",
    "msw": "^2.6.6",
    "openapi-typescript": "^6.7.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "react-scripts": "^5.0.1",
    "source-map-explorer": "^2.5.3",
    "storybook": "^8.6.15",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "yaml": "^2.8.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --watchAll=false",
    "test:watch": "react-scripts test",
    "test:ci": "cross-env CI=true react-scripts test --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\"",
    "e2e": "playwright test --reporter=list",
    "e2e:headed": "playwright test --headed",
    "e2e:install": "playwright install",
    "analyze": "react-scripts build && source-map-explorer 'build/static/js/*.js'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "postinstall": "node scripts/postinstall.js",
    "generate:openapi:types": "openapi-typescript ../specs/001-django-fastapi-react/contracts/openapi.yaml -o src/services/api/types.d.ts"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/glass/**/*.{js,jsx,ts,tsx}",
      "src/services/glass/**/*.{js,ts}",
      "src/services/theme/**/*.{ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
